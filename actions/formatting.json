{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Format GitHub action updates",
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "matchPackagePatterns": ["*"],
      "prBodyDefinitions": {
        "Package": "[{{{depName}}}](https://github.com/{{{depName}}})",
        "Change": "{{#if newValue}}[`{{{currentValue}}}` -> `{{{newValue}}}`](https://github.com/{{{depName}}}/compare/{{{currentValue}}}..{{{newValue}}}){{/if}}{{#if newDigest}}[`{{{currentDigest}}}` -> `{{{newDigest}}}`](https://github.com/{{{depName}}}/compare/{{{currentDigest}}}..{{{newDigest}}}){{/if}}"
      }
    }
  ]
}
